{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2], // Warnings for indentation
    "linebreak-style": ["off"], // Turn off OS-specific linebreak errors
    "quotes": ["warn", "single"], // Warn for single vs double quotes
    "semi": ["warn", "always"], // Warn for missing semicolons
    "no-console": "off", // Allow console logs
    "comma-dangle": "off", // Turn off dangling commas
    "arrow-parens": "off", // Turn off strict arrow parens enforcement
    "object-curly-spacing": ["warn", "always"], // Warn for object spacing
    "array-bracket-spacing": ["warn", "always"], // Warn for array spacing
    "import/prefer-default-export": "off", // Disable default export preference
    "consistent-return": "off", // Turn off consistent return enforcement
    "no-unused-vars": "warn", // Only warn for unused variables
    "no-undef": "error", // Flag undeclared variables (important)
    "no-extra-semi": "error", // Flag extra semicolons (syntax issue)
    "no-redeclare": "error", // Disallow redeclaring variables
    "no-unreachable": "error" // Error for unreachable code
  }
}
